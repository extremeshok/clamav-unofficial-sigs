/var/log/clamav-unofficial-sigs/clamav-unofficial-sigs.log {
     weekly
     rotate 4
     missingok
     notifempty
     compress
# Redhat / CentOS 6
     create 0644 clam clam
# Debian / Ubuntu
#     create 0644 clamav clamav
}
